<div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
  <h2 class="text-2xl font-semibold text-gray-700 text-center">{{service}}</h2>
  <p class="text-xl text-gray-600 text-center">Sign up</p>

  <form action="/signup{{#if redirect}}?redirect={{redirect}}{{else}}{{/if}}" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="inline-block mt-2 w-1/2 pr-1">
      <label for="firstname" class="block text-gray-700 text-sm font-bold mb-2">Firstname</label>
      <input type="text" id="firstname" placeholder="Firstname" name="firstname"
        class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block appearance-none">
    </div>
    <div class="inline-block mt-2 w-1/2 pr-1">
      <label for="lastname" class="block text-gray-700 text-sm font-bold mb-2">Lastname</label>
      <input type="text" id="lastname" placeholder="Lastname" name="lastname"
        class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block appearance-none">
    </div>

    <div class="mt-4">
      <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email Address</label>
      <input type="email" id="username" placeholder="your@email.com" name="username"
        class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none">
    </div>

    <div class="mt-4">
      <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
      <input type="password" id="password" placeholder="Password" name="password"
        class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none">
    </div>
    <div class="mt-8">
      <button type="submit"
        class="bg-gray-700 text-white font-bold py-2 px-4 w-full rounded hover:bg-gray-600">Signup</button>
    </div>
  </form>

  <div class="mt-4 flex items-center justify-between">
    <span class="border-b w-1/5 md:w-1/4"></span>
    <a href="/login{{#if redirect}}?redirect={{redirect}}{{else}}{{/if}}" class="text-xs text-gray-500 uppercase">or log in</a>
    <span class="border-b w-1/5 md:w-1/4"></span>
  </div>

</div>